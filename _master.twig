<!DOCTYPE html>
<html lang="{{ htmllang() }}">

  {{ include('_head.twig') }}

  <body>

    <div id="header">
      <h1>
          <a href="{{ path('homepage') }}">
              {{ config.get('general/sitename') }}
          </a>
      </h1>
      <span class="lead">
        {% if config.get('general/payoff') %}
          {{ config.get('general/payoff')|markdown }}
        {% endif %}
      </span>
    </div>
    
    {% block menu %}
      {{ menu('main', '_menu.twig') }}
    {% endblock menu %}

    <div class="content container">
      {% block content %}{% endblock %}
    </div>

  </body>
</html>
